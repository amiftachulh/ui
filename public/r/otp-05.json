      "target": "app/otp/page.tsx",
      "content": "import { styled } from \"styled-system/jsx\";\nimport { OTPForm } from \"@/registry/default/blocks/otp-05/components/otp-form\";\n\nexport default function OTPPage() {\n  return (\n    <styled.div\n      css={{\n        bg: \"bg\",\n        display: \"flex\",\n        minH: \"svh\",\n        flexDir: \"column\",\n        alignItems: \"center\",\n        justifyContent: \"center\",\n        gap: \"6\",\n        p: \"6\",\n        md: { p: \"10\" },\n      }}\n    >\n      <styled.div css={{ w: \"full\", maxW: \"sm\" }}>\n        <OTPForm />\n      </styled.div>\n    </styled.div>\n  );\n}\n"
    },
    {
      "path": "registry/default/blocks/otp-05/components/otp-form.tsx",
      "type": "registry:component",
      "content": "import { LuGalleryVerticalEnd } from \"react-icons/lu\";\nimport { styled } from \"styled-system/jsx\";\nimport { Button } from \"@/registry/default/ui/button\";\nimport { Field, FieldDescription, FieldGroup, FieldLabel } from \"@/registry/default/ui/field\";\nimport {\n  InputOTP,\n  InputOTPGroup,\n  InputOTPSeparator,\n  InputOTPSlot,\n} from \"@/registry/default/ui/input-otp\";\n\nexport function OTPForm({ css, ...props }: React.ComponentProps<typeof styled.div>) {\n  return (\n    <styled.div css={{ display: \"flex\", flexDir: \"column\", gap: \"6\", ...css }} {...props}>\n      <form>\n        <FieldGroup>\n          <styled.div\n            css={{\n              display: \"flex\",\n              flexDir: \"column\",\n              alignItems: \"center\",\n              gap: \"2\",\n              textAlign: \"center\",\n            }}\n          >\n            <styled.a\n              href=\"#\"\n              css={{\n                display: \"flex\",\n                flexDir: \"column\",\n                alignItems: \"center\",\n                gap: \"2\",\n                fontWeight: \"medium\",\n              }}\n            >\n              <styled.div\n                css={{\n                  display: \"flex\",\n                  w: \"8\",\n                  h: \"8\",\n                  alignItems: \"center\",\n                  justifyContent: \"center\",\n                  rounded: \"md\",\n                }}\n              >\n                <LuGalleryVerticalEnd size={24} />\n              </styled.div>\n              <styled.span css={{ srOnly: true }}>Acme Inc.</styled.span>\n            </styled.a>\n            <styled.h1 css={{ textStyle: \"xl\", fontWeight: \"bold\" }}>\n              Enter verification code\n            </styled.h1>\n            <FieldDescription>We sent a 6-digit code to your email address</FieldDescription>\n          </styled.div>\n          <Field>\n            <FieldLabel htmlFor=\"otp\" css={{ srOnly: true }}>\n              Verification code\n            </FieldLabel>\n            <InputOTP maxLength={6} id=\"otp\" required containerCss={{ gap: \"4\" }}>\n              <InputOTPGroup\n                css={{\n                  gap: \"2.5\",\n                  \"& > [data-slot=input-otp-slot]\": {\n                    w: \"12\",\n                    h: \"16\",\n                    borderWidth: \"1px\",\n                    rounded: \"md\",\n                    textStyle: \"xl\",\n                  },\n                }}\n              >\n                <InputOTPSlot index={0} />\n                <InputOTPSlot index={1} />\n                <InputOTPSlot index={2} />\n              </InputOTPGroup>\n              <InputOTPSeparator />\n              <InputOTPGroup\n                css={{\n                  gap: \"2.5\",\n                  \"& > [data-slot=input-otp-slot]\": {\n                    w: \"12\",\n                    h: \"16\",\n                    borderWidth: \"1px\",\n                    rounded: \"md\",\n                    textStyle: \"xl\",\n                  },\n                }}\n              >\n                <InputOTPSlot index={3} />\n                <InputOTPSlot index={4} />\n                <InputOTPSlot index={5} />\n              </InputOTPGroup>\n            </InputOTP>\n            <FieldDescription css={{ textAlign: \"center\" }}>\n              Didn&apos;t receive the code? <a href=\"#\">Resend</a>\n            </FieldDescription>\n          </Field>\n          <Field>\n            <Button type=\"submit\">Verify</Button>\n          </Field>\n        </FieldGroup>\n      </form>\n      <FieldDescription css={{ px: \"6\", textAlign: \"center\" }}>\n        By clicking continue, you agree to our <a href=\"#\">Terms of Service</a> and{\" \"}\n        <a href=\"#\">Privacy Policy</a>.\n      </FieldDescription>\n    </styled.div>\n  );\n}\n"
    }
  ],
  "categories": [
    "authentication",
